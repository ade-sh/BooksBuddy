<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adesh.projbk.AccountActivity"
    tools:showIn="@layout/activity_account">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="382dp"
        android:layout_height="117dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/im_defbk" />

    <Button
        android:id="@+id/btn_Logout"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_AccEmail"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_AccEmail"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:text="@string/LogOut" />

    <TextView
        android:id="@+id/tv_accUserName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="29dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_AccEmail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_accUserName"
        android:layout_marginTop="13dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="@+id/tv_accUserName"
        tools:layout_editor_absoluteY="205dp" />

    <TextView
        android:id="@+id/tv_AccPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/tv_AccEmail"
        android:layout_marginTop="13dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_Logout" />
</RelativeLayout>
