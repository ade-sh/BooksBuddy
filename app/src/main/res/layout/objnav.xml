<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_weight="0.08"
    android:paddingBottom="10dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:contentPadding="1dp">

    <LinearLayout
        android:id="@+id/ll_objnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfdfd"
        android:divider="@color/transparent"
        android:dividerPadding="20dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/bkImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:transitionName="main-transition_iv" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="0.00"
            android:clickable="false"
            android:maxHeight="26dp"
            android:numStars="5"
            android:saveEnabled="false"
            android:stepSize="1"
            android:transitionName="main-transition_rb"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvUploader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:background="@color/Yellow"
            android:elevation="1dp"
            android:fontFamily="monospace"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bkText"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.03"
            android:maxLines="1"
            android:text="TextView"
            android:transitionName="main-transition_tv" />
    </LinearLayout>
</android.support.v7.widget.CardView>
