<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@id/lvbuydetail"
    android:layout_marginTop="190dp"
    tools:context="com.adesh.projbk.BuyFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_frag_buy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_frag_buy_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_frag_buy_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="seller"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_frag_buy_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btn_frag_buy"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="Buy"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
